<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @xyz.options %></h1>
    <a href="<%= url_for :action => :show, :id => @xyz.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @xyz.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @xyz.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="xyz[options]" class="fieldLabel">Options</label>
            <input type="text" id="xyz[options]" name="xyz[options]" value="<%= @xyz.options %>" <%= placeholder( "Options" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
