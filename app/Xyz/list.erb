
<div data-role="page" data-theme="a">

<div data-role="panel" id="myPanel" class="main_nav" data-display="push"  data-dismissible="true" data-theme="b">
  <ul data-role="listview" class="a">            

          <li><a href="/app/Xyz" data-role="button" data-icon="home">
          Home</a> </li>
            <%= render :partial =>"partials/archivelist", :locals => { :articles => @articles } %>            
                                
          </ul>
 </div><!-- /panel -->
<div data-role="header" > 
    <a href="#myPanel" data-rel="panel" data-role="button" data-corners="false" data-iconpos="notext" data-icon="bars" data-theme="c" style="background-color:#9ecf5e;border-color:#567133"></a>
    <h1>DQ</h1>
    <div class="orange" style="background-color:orange;float:left;width:100%;height:2px"></div>
 
</div><!-- /header -->
<div data-role="content" style="overflow-x: visible;">
    <ul data-role="listview" >            
          <%begin%>
            <% @ds["pages"].each do |d|%>
              <li data-icon="false" >
                <a  href="/app/Xyz/articl?ad=<%=d['link']%>" style="white-space:normal;">
                <%begin%>
                <img src="<%=d["img_url"]%>" class="ui-li-thumb" />
                <%rescue%>
                <img src="/public/images/article.jpg" class="ui-li-thumb" />
                <%end%>
                <h2 class="ui-li-heading"><%=d["title"]%></h2>  
                    <p class="ui-li-desc"><%=d["link"]%></p>
             
                </a></li>
            <%end%>
          <%rescue Exception => e%>
          <%="Error: #{e}"%>
          <%end%>
     </ul>

  </div><!-- /content -->
</div>
