
<div data-role="page" data-theme="a">
<script>
$(function(){
$("a#archiveit").click(function (e) {
    e.stopImmediatePropagation();
    e.preventDefault();
  $.ajax({
          url: "/app/Article/create1",
          data: {"article": {
            "title" : "<%=@artc['title']%>",
            "content" : $('.read_text').html(),
          "source" : "<%=@source%>"}
          }
        });
        return false;
});

});
</script>
